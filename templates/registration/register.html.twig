{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<main id="mainInscription">
    <div id="containerInscription">

        <div id="Inscription">
            <h1 class="h1Titre">Je m'inscris</h1>


    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.lastnameUser, { 'id' : 'testid'}) }}
        {{ form_row(registrationForm.nameUser) }}
        {{ form_row(registrationForm.birthUser) }}
        {{ form_row(registrationForm.mailUser) }}
